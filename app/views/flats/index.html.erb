<header>
  <h1>All flats</h1>
  <h2>There are 3 flats</h2>
</header>
<main class="d-flex">
  <% @flats.each do |flat| %>
    <div class="flat-card">
      <%= image_tag("flat#{flat.id}.jpg", size: '350x200') %>
      <h3><%= flat.name %></h3>
      <h4><%= flat.address %></h4>
      <div>
        <p>Number of people: <%= flat.number_of_guests %></p>
        <p>Price per night: <%= flat.price_per_night %>â‚¬</p>
      </div>
      <div class="links">
        <%= link_to 'More info', flat_path(flat), class: 'blue-color' %>
        <%= link_to 'Edit',  edit_flat_path(flat), class: 'orange-color' %>
        <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?'}, class: 'red-color' %>
      </div>
    </div>
  <% end %>
</main>
